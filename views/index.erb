<div class="row">
  <% recipes.each do |recipe| %>
    <div class="col-md-4 mb-3">
    <div class="card">
      <img src="<%= recipe.photo.url %>" alt="<%= recipe.title %>" style="height: 200px" />

      <div class="card-body">
        <h5 class="card-title"><%= recipe.title %></h5>
        <p class="card-text"><small class="text-muted">Last modified: <%= recipe.updated_at %></small></p>
        <a href="/recipe/<%= recipe.id %>" class="btn btn-primary">View details</a>
      </div>
    </div>
    </div>
  <% end %>
</div>
